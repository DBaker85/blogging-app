mixin img(options)

	- src = options.src || '';
	- width = options.width || '';
	- height = options.height || '';
	- classes = options.classes || '';
	- alt = options.alt || 'alt text';
	- lazy = options.lazy || 'true';

	- loader = 'data:image/png;base64,'

	if lazy == 'true'
		img.lazy.is-lazy-loading(lazy-img="/images/"+src src=loader width=width height=height alt=alt class=classes)
		noscript
			img(src="/images/"+src width=width height=height alt=alt class=classes)
	else
		img(src="/images/"+src width=width height=height alt=alt class=classes)

