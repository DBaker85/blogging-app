include ../_base/components.pug

.tile(data-expand="{{expand}}" data-theme="{{theme}}" ng-click="expander()" class="{{ (state == 'loaded') ? '' : 'loading' }} {{ error ? 'error' : '' }}")
  .tile__content
    .tile__picture(ng-switch="type")
      .tile__image(ng-switch-when="image")
        img(src="images/tiles/{{image}}.jpg" title="" width="100%" height="100")
      .tile__icon(ng-switch-when="icon")
        +icon({
            icon:'{{icon}}'
          })
      .tile__description
        | {{title}}
  .tile__expander(ng-switch="theme")
    .expanded__content(ng-switch-default ng-bind-html="content")

    .expanded__content(ng-switch-when="twitter")
      twitter-timeline(twitter-timeline-id='"'+widgetID+'"' twitter-timeline-options='{"chrome": "noheader nofooter", "height":"340", "theme":"light"}')




